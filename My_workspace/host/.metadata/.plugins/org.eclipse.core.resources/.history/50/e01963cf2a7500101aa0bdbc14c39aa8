#include <stdio.h>
#include <stdint.h>

void wait_for_return(void);

int main (void)
{
	int32_t BitToExtract = 0x3500;
	int8_t BitOutput;

	BitOutput = (int8_t)(BitToExtract >> 8) & (0x000F);

	printf("This is the value from the 8th bit to the 11th bit: %d 0x%08x\n",BitOutput);
	wait_for_return();

	return 0;
}

void wait_for_return(void)
{
	printf("Press enter key button to exit application");
	fflush(stdout);
	while(getchar()!= '\n')
	{

	}
	getchar();
}
