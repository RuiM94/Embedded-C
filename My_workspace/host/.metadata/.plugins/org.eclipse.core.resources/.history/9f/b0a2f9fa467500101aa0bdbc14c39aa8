/*
 * main.c
 *
 *  Created on: Aug 9, 2025
 *      Author: Rui
 */


#include <stdio.h>
#include <stdint.h>

void wait_for_return(void);

int main (void)
{
	int32_t num1,num2;
	//uint32_t counter=0;

	printf("Give a start and an end number (Integers only and a space in between them): \n");
	fflush(stdout);
	scanf("%d %d",&num1,&num2);
	if(num1%2)
		num1++;
	if(num1>num2)
	{
		printf("Your starting number is bigger than your ending number, exiting program...\n");
		wait_for_return();
		return 0;
	}
	printf("Even numbers are:\n");
	for(uint32_t counter=0;num1<=num2;num1+=2){
		printf("%4d\t",num1);
		fflush(stdout);
		counter++;
	}
	printf("\nTotal even numbers: %d\n", counter);
	fflush(stdout);
	wait_for_return();
	return 0;
}

void wait_for_return(void)
{
	printf("Press enter key button to exit application");
	fflush(stdout);
	while(getchar()!= '\n')
	{

	}
	getchar();
}
