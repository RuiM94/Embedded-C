#include <stdio.h>
#include <stdint.h>

void wait_for_return(void);

int main (void)
{
	uint32_t num1,num2,counter =0;

	printf("Give a start and an end number (Integers only and a space in between them): \n");
	fflush(stdout);
	scanf("%d %d",&num1,&num2);
	if(num1%2)
		num1++;
	printf("Even numbers are:\n");

	while(num1<=num2)
	{
		printf("%d\t",num1);
		fflush(stdout);
		num1+= 2;
		counter++;
	}
	printf("Total even numbers: %d\n", counter);
	fflush(stdout);
	wait_for_return();
	return 0;
}

void wait_for_return(void)
{
	printf("Press enter key button to exit application");
	fflush(stdout);
	while(getchar()!= '\n')
	{

	}
	getchar();
}
