#include <stdio.h>
int main(void)
{
	float a, b, c;

	printf("Input first number:\n");
	fflush(stdout);
	scanf("%f", &a);
	printf("Input second number:\n");
	fflush(stdout);
	scanf("%f", &b);
	printf("Input third number:\n");
	fflush(stdout);
	scanf("%f", &c);
	printf("Your average is: %f", (a+b+c)/3);
	fflush(stdout);

	getchar();
	getchar();
	return 0;
}

float a, b, c;

	printf("Input your 3 numbers:\n");
	fflush(stdout);
	scanf("%f %f %f", &a,&b,&c);

	printf("Your average is: %f", (a+b+c)/3);
	fflush(stdout);

	getchar();
	getchar();
	return 0;